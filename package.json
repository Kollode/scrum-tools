{
  "name": "scrum-tools",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/js/server.bundle.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "webpack --mode production",
    "dev": "npm-run-all -n -p -r dev:client \"dev:server {@}\" -- ",
    "dev:client": "webpack --mode development --watch",
    "dev:server": "ts-node-dev --respawn --transpileOnly src/server.tsx"
  },
  "dependencies": {
    "@material-ui/core": "^3.0.3",
    "@types/socket.io-client": "^1.4.32",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "prop-types": "^15.6.2",
    "qrcode.react": "^0.8.0",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.9.4",
    "@types/qrcode.react": "^0.8.1",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/socket.io": "^1.4.38",
    "npm-run-all": "^4.1.3",
    "ts-loader": "^4.5.0",
    "ts-node-dev": "^1.0.0-pre.30",
    "typescript": "^3.0.3",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
}
